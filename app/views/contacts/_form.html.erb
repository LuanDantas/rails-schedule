<%= form_for @contact do |f| %>

    <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <!-- Address --> 
    <%= f.fields_for :address do |a| %>
        <div class="field">
            <%= a.label :street %>
            <%= a.text_field :street %>
        </div>        
        <div class="field">
            <%= a.label :number %>
            <%= a.text_field :number %>
        </div>
        <div class="field">
            <%= a.label :neighborhood %>
            <%= a.text_field :neighborhood %>
        </div>
    <% end %>
    <!-- / Address -->

    <!-- Phones -->
    <!-- / Phones -->

    <div class="actions">
        <%= f.submit "Enviar" %>
    </div>
<% end %>